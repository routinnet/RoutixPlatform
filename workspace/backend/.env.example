# Routix Platform Environment Variables

# Basic Settings
PROJECT_NAME=Routix Platform
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=routix_user
POSTGRES_PASSWORD=routix_password
POSTGRES_DB=routix_db
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Services
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key
MIDJOURNEY_API_KEY=your-midjourney-api-key

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=/tmp/routix_uploads

# Stripe
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@routix.dev
EMAILS_FROM_NAME=Routix Platform